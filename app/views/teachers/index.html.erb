<!DOCTYPE html>
<html>
  <head>
    <script>
      function fetchSchoolId() {
        var url = new URL(window.location.href);
        var urlValue = url.searchParams.get("id");
        return urlValue;
      }
    </script>
  </head>
  <body>
    <h1>Teachers</h1>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone No</th>
        <th>Gender</th>
        <th colspan="3"></th>
      </tr>
      <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.name %></td>
          <td><%= teacher.address %></td>
          <td><%= teacher.phone_no %></td>
          <td><%= teacher.gender %></td>
          <td><a href='/show_teacher?id=<%= teacher.id %>'>Edit</a></td>
          <td><a href='/delete_teacher?id=<%= teacher.id %>'>Delete</a></td>
        </tr>
      <% end %>
    </table>
  </body>
</html>
<a href='' onclick="this.href='/show?id='+ fetchSchoolId()">back</a>