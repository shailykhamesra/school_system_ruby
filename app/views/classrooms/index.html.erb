<!DOCTYPE html>
<html>
  <head>
    <script>
      function fetchSchoolId() {
        var url = new URL(window.location.href);
        var urlValue = url.searchParams.get("id");
        return urlValue;
      }
    </script>
  </head>
  <body>
    <h1>Classrooms</h1>
    <table>
      <tr>
        <th>Id</th>
        <th>Room no</th>
        <th>Class no</th>
        <th colspan="3"></th>
      </tr>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.id %></td>
          <td><%= classroom.room_no %></td>
          <td><%= classroom.class_no %></td>
          <td><a href='/show_classroom?id=<%= classroom.id %>'>Edit</a></td>
          <td><a href='/delete_classroom?id=<%= classroom.id %>'>Delete</a></td>
        </tr>
      <% end %>
    </table>
  </body>
</html>
<a href='' onclick="this.href='/show?id='+ fetchSchoolId()">back</a>